{
  "manifest_version": 2,
 
  "name": "MAXimize",
  "icons": {"16": "icon16.png",
            "128": "icon128.png"
  },
  "version": "0.1.0",
  "description": "A browser extension that transforms all the images you see into photos of Max Nikias.",

  	"browser_action": {
	"default_icon": "icon16.png",
	"default_popup": "popup.html",
	"default_title": "MAXimize"
	},
 
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js"],
    "matches": ["https://*/*", "http://*/*"]
  }]
 
}